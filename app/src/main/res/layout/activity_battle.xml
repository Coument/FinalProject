<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/run"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="Go!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="25sp"
        android:layout_marginLeft="125dp"/>

    <Button
        android:id="@+id/btn_stone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="石頭"
        app:layout_constraintEnd_toStartOf="@+id/btn_paper"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_scissor"
        app:layout_constraintTop_toTopOf="@id/btn_scissor" />

    <Button
        android:id="@+id/btn_scissor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="124dp"
        android:text="剪刀"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_stone"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="布"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_stone"
        app:layout_constraintTop_toTopOf="@id/btn_stone" />

    <TextView
        android:id="@+id/layers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="層數:1"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="26dp" />

    <TextView
        android:id="@+id/enemy_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="0dp"
        android:text="100HP/100HP"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@id/enemy_hp2"
        app:layout_constraintTop_toTopOf="@+id/enemy_hp2" />

    <TextView
        android:id="@+id/enemy_hp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="敵人的HP:"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="110dp"/>

    <TextView
        android:id="@+id/your_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100HP/100HP"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@id/your_hp2"
        app:layout_constraintTop_toTopOf="@+id/your_hp2" />

    <TextView
        android:id="@+id/your_hp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你的HP:"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="200dp"  />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/img_a" />

</androidx.constraintlayout.widget.ConstraintLayout>